<h1>Listing addresses</h1>

<table>
  <tr>
    <th>User</th>
    <th>Name</th>
    <th>Street1</th>
    <th>Street2</th>
    <th>City</th>
    <th>Postcode</th>
    <th>Country</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.user %></td>
    <td><%= address.name %></td>
    <td><%= address.street1 %></td>
    <td><%= address.street2 %></td>
    <td><%= address.city %></td>
    <td><%= address.postcode %></td>
    <td><%= address.country %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

