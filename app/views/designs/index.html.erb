<h1>Listing designs</h1>

<table>
  <tr>
    <th>Background image</th>
    <th>Background color</th>
    <th>Logo</th>
    <th>Text color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @designs.each do |design| %>
  <tr>
    <td><%= design.background_image %></td>
    <td><%= design.background_color %></td>
    <td><%= design.logo %></td>
    <td><%= design.text_color %></td>
    <td><%= link_to 'Show', design %></td>
    <td><%= link_to 'Edit', edit_design_path(design) %></td>
    <td><%= link_to 'Destroy', design, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

