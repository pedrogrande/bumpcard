<%= simple_form_for(@website) do |f| %>
  <%= f.error_notification %>

 
    <%= f.input :name, :label => "Website name", :placeholder => 'Blog, Facebook etc', :autofocus => true, :class => 'span4' %>
    <%= f.input :url, :label => "URL/Web address", :placeholder => 'http://www.example.com', :class => 'span4' %>
 
    <%= f.button :submit %>

<% end %>
